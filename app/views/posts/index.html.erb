<h1>简洁、快乐的沟通工具！——V1.0</h1>

<table>
  <tr>
    <th>To name</th>
    <th>Title</th>
    <th>Content</th>
    <th>Begin date</th>
    <th>End date</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.to_name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.begin_date %></td>
    <td><%= post.end_date %></td>
    <td><%= post.author %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

